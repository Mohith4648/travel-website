pipeline {
    agent any

    environment {
        // --- UPDATED DOCKER REPOSITORY ---
        DOCKER_USER = "mohith4648"
        IMAGE_NAME  = "travel-project"
        TAG         = "v1"
        CRED_ID     = "dockerentry" // Your Docker Hub credential ID in Jenkins
    }

    stages {
        stage('1. Setup & Workspace Cleanup') {
            steps {
                cleanWs()
                // Pulls your latest code
                git branch: 'main', url: 'https://github.com/Mohith4648/internfile.git'
            }
        }

        stage('2. Build & Push Image') {
            steps {
                // Securely fetches your Docker Hub username and password
                withCredentials([usernamePassword(credentialsId: "${env.CRED_ID}", 
                                 passwordVariable: 'DOCKER_PASS', 
                                 usernameVariable: 'DOCKER_USER_VAR')]) {
                    script {
                        echo "Building Docker Image: ${DOCKER_USER}/${IMAGE_NAME}:${TAG}..."
                        sh "docker build -t ${DOCKER_USER}/${IMAGE_NAME}:${TAG} ."
                        
                        echo "Logging into Docker Hub..."
                        sh "echo '${DOCKER_PASS}' | docker login -u '${DOCKER_USER_VAR}' --password-stdin"
                        
                        echo "Pushing to new repository: ${DOCKER_USER}/${IMAGE_NAME}..."
                        sh "docker push ${DOCKER_USER}/${IMAGE_NAME}:${TAG}"
                        
                        sh "docker logout"
                    }
                }
            }
        }

        stage('3. Production Deployment') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${env.CRED_ID}", 
                                 passwordVariable: 'DOCKER_PASS', 
                                 usernameVariable: 'DOCKER_USER_VAR')]) {
                    script {
                        echo "Deploying Travel Project to Port 8081..."
                        // Force clean old container
                        sh "docker rm -f prod-site || true"
                        
                        // Run the updated container from the new repository
                        sh "docker run -d --name prod-site -p 8081:80 ${DOCKER_USER}/${IMAGE_NAME}:${TAG}"
                        
                        echo "------------------------------------------------------------"
                        echo "SUCCESS: Travel Project is LIVE at http://localhost:8081"
                        echo "IMAGE: ${DOCKER_USER}/${IMAGE_NAME}:${TAG}"
                        echo "------------------------------------------------------------"
                    }
                }
            }
        }
    }
}
