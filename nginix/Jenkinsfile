
pipeline {
    agent any

    environment {
        DOCKER_USER = "mohith4648"
        IMAGE_NAME  = "travel-project"
        TAG         = "v1"
        CRED_ID     = "dockerentry" 
    }

    stages {
        stage('1. Setup & Workspace Cleanup') {
            steps {
                cleanWs()
                // Make sure this URL is the one you actually want to build!
                git branch: 'main', url: 'https://github.com/Mohith4648/internfile.git'
            }
        }

        stage('2. Build & Push Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${env.CRED_ID}", 
                                 passwordVariable: 'DOCKER_PASS', 
                                 usernameVariable: 'DOCKER_USER_VAR')]) {
                    script {
                        sh "docker build -t ${DOCKER_USER}/${IMAGE_NAME}:${TAG} ."
                        sh "echo '${DOCKER_PASS}' | docker login -u '${DOCKER_USER_VAR}' --password-stdin"
                        sh "docker push ${DOCKER_USER}/${IMAGE_NAME}:${TAG}"
                        sh "docker logout"
                    }
                }
            }
        }

        stage('3. Production Deployment') {
            steps {
                script {
                    sh "docker rm -f prod-site || true"
                    sh "docker run -d --name prod-site -p 8081:80 ${DOCKER_USER}/${IMAGE_NAME}:${TAG}"
                }
            }
        }
    }
}
